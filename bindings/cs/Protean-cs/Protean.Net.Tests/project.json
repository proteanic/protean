{
  "version": "1.0.0-*",
  "buildOptions": {
    "emitEntryPoint": true,
    "copyToOutput" : {
      "include": [ "xsd/*", "xml/*" ]
    },
    "publicSign": true,
    "keyFile": "../Protean.Net/protean.snk"
  },

  "dependencies": {
    "NUnit": "3.6.0",
    "NUnitLite": "3.6.0",
    "Protean.Net": {
      "target": "project"
    },
    "dotnet-test-nunit": "3.4.0-beta-3"
  },

  "testRunner": "nunit",

  "frameworks": {
    "netcoreapp1.0": {
      "buildOptions": {
        "define": [ "DISABLE_XMLVALIDATION", "DISABLE_DATATABLE", "DISABLE_SERIALIZATION", "NETCORE10" ]
      },
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.3"
        }
      }
    },
    "net462": {
    } 
  },

  "runtimes": {
    "win":  {} 
  }
}
